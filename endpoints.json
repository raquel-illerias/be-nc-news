{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an specific article object",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 6,
          "title": "A",
          "topic": "mitch",
          "author": "icellusedkars",
          "body": "Delicious tin of cat food",
          "created_at": "2020-10-18T01:00:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]        
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a specific article object ordered by the most recent comments first",
    "exampleResponse": {
      "articles": [
        {
          "article_id": 2,
          "title": "B",
          "topic": "kakun",
          "author": "JKLollipops",
          "body": "Lovely candy shop",
          "created_at": "2020-10-18T01:00:00.000Z",
          "votes": 1,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]        
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "inserts a comment into the comments database, associating it with an article identified by its unique ID number",
    "requestFormatExample": {
    "username": "your_username",
    "body": "The content of your comment"
    },
    "exampleResponse": {
      "comment": "Your comment has been successfully posted"
    }
  }
}
